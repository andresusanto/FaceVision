<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ganesus.facevision" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleFace"
            android:label="@string/title_activity_simple_face" >
        </activity>
        <activity
            android:name=".FaceCounter"
            android:label="@string/title_activity_face_counter" >
        </activity>
        <activity
            android:name=".FFTActivity"
            android:label="@string/title_activity_fft" >
        </activity>
        <activity
            android:name=".FaceEdgeActivity"
            android:label="@string/title_activity_face_edge"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
