<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu">

    <TextView android:text="Welcome to Face Vision!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="1"
        android:text="Edge Detection"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="pilihAktivitas" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="2"
        android:text="K-Means Clustering"
        android:id="@+id/button1"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="pilihAktivitas" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="3"
        android:text="Face Counter"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:onClick="pilihAktivitas" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="4"
        android:text="Fast Fourier Transform"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:onClick="pilihAktivitas" />

</RelativeLayout>
